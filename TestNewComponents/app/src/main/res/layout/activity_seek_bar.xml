<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <SeekBar
        android:id="@+id/greenSeekBar1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:duplicateParentState="false"
        android:max="100"
        android:outlineAmbientShadowColor="@android:color/black"
        android:progressTint="#8BAB0DEF"
        android:thumb="@drawable/isb_indicator_rounded_corners" />

    <TextView
        android:id="@+id/changableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/greenSeekBar1"
        android:layout_centerHorizontal="true"
        android:text="تقييم الخدمة: "
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_below="@+id/greenSeekBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@android:color/black"/>


</RelativeLayout>