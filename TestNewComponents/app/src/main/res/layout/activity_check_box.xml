<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBox">

    <TextView
        android:id="@+id/shawarmaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تبي الشاورما مع شنو: "
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:textSize="30dp"/>

    <CheckBox
        android:id="@+id/potatoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shawarmaButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="بطاط"
        android:ems="5" />

    <CheckBox
        android:id="@+id/tomatoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="طماط"
        android:ems="5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/potatoButton"
        android:layout_marginTop="5dp"/>

    <CheckBox
        android:id="@+id/taheenaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="طحينة"
        android:ems="5"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/onionButton"
        android:layout_marginTop="5dp" />

    <CheckBox
        android:id="@+id/onionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tomatoButton"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:text="بصل" />

    <CheckBox
        android:id="@+id/garlicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ثوم"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:ems="5"
        android:layout_below="@id/taheenaButton"/>

    <Button
        android:id="@+id/orderNowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إطلب"
        android:ems="7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/garlicButton"/>

</RelativeLayout>